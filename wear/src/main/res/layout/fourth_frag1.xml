<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/flag_fixed1" >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/flag"
        android:src="@drawable/whitey"
        android:layout_below="@+id/elections_header"
        android:layout_alignParentStart="true" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="50dp"
        android:maxHeight="50dp"
        android:scaleType="fitCenter"
        android:id="@+id/obama"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/obama1"
        android:background="@null"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="50dp"
        android:maxHeight="50dp"
        android:scaleType="fitCenter"
        android:id="@+id/romney"
        android:src="@drawable/romney1"
        android:background="@null"
        android:layout_alignLeft="@+id/obama"
        android:layout_below="@+id/obama"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/elections_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="2012 Elections"
        android:layout_marginTop="14dp"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>

    <TextView
        android:id="@+id/county"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Adair County, KY"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:layout_below="@+id/elections_header"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>

    <TextView
        android:id="@+id/obama_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="21.8%\t1,678 votes"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/obama"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/obama"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>

    <TextView
        android:id="@+id/romney_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="76.9%\t5,874 votes"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/romney"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/romney"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>






</RelativeLayout>