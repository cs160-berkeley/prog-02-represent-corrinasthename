<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/flag_fixed1" >


    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:adjustViewBounds="true"
    android:maxWidth="130dp"
    android:maxHeight="130dp"
    android:scaleType="fitCenter"
    android:id="@+id/picture"
    android:src="@drawable/ed_whitfield1"
    android:background="@null"
    android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_below="@+id/picture">

    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/bar"
    android:src="@drawable/white_bar" />


    <TextView
    android:id="@+id/rep_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Rep., Ed Whitfield"
    android:textColor="#1e88e5"
    android:layout_alignTop="@+id/white"
    android:layout_centerHorizontal="true"
    android:gravity="center"
    android:layout_marginTop="10dp"/>


    <TextView
    android:id="@+id/party"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Republican"
    android:textColor="#1e88e5"
    android:layout_below="@+id/rep_name"
    android:layout_centerHorizontal="true"
    android:gravity="center"/>

    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:adjustViewBounds="true"
    android:maxWidth="20dp"
    android:maxHeight="20dp"
    android:scaleType="fitCenter"
    android:id="@+id/party_pic"
    android:src="@drawable/republican1"
    android:layout_below="@+id/rep_name"
    android:layout_toRightOf="@+id/party"/>

    </RelativeLayout>

</RelativeLayout>