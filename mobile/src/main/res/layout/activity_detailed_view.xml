<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cs160.joleary.catnip.DetailedViewActivity">



    <!--BARBARA-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="130dp"
        android:maxHeight="130dp"
        android:scaleType="fitCenter"
        android:id="@+id/barbara1"
        android:background="@null"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="false"
        android:layout_centerHorizontal="true"
        android:src="@drawable/barbara_boxer1" />

    <TextView
        android:id="@+id/rep_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sen., Barbara Boxer"
        android:textColor="#000000"
        android:layout_below="@+id/barbara1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/rep_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="http://boxer.senate.gov\nsen.boxer@ca.gov"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/rep_name1"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="30dp"
        android:maxHeight="30dp"
        android:scaleType="fitCenter"
        android:id="@+id/party_pic"
        android:src="@drawable/democrat"
        android:layout_alignBottom="@+id/barbara1"
        android:layout_toRightOf="@+id/barbara1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="-15dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="15dp"
        android:maxHeight="15dp"
        android:scaleType="fitCenter"
        android:id="@+id/twitter"
        android:src="@drawable/twitter"
        android:layout_toRightOf="@+id/rep_name"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/rep_name1"/>

    <TextView
        android:id="@+id/handle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="\@senatorboxer"
        android:textColor="#1e88e5"
        android:layout_toRightOf="@+id/twitter"
        android:layout_alignTop="@+id/rep_name"
        android:layout_marginLeft="5dp"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_centerVertical="true"
        android:layout_below="@+id/rep_name"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/rep_name" >


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Party: Democrat"
                android:id="@+id/textView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Term Ends: January 3, 2017"
                android:layout_marginTop="5dp"
                android:layout_below="@id/textView"
                android:id="@+id/textView1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Committees:"
                android:layout_marginTop="5dp"
                android:layout_below="@id/textView1"
                android:id="@+id/textView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Senate Select Committee on Ethics"
                android:layout_marginTop="5dp"
                android:layout_below="@id/textView2"
                android:id="@+id/textView3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Senate Committee on Environment and Public Works"
                android:layout_marginTop="5dp"
                android:layout_below="@id/textView3"
                android:id="@+id/textView4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="see all 11 committees"
                android:layout_marginTop="5dp"
                android:layout_below="@id/textView4"
                android:id="@+id/textView5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bills Recently Sponsored:"
                android:layout_marginTop="5dp"
                android:layout_below="@id/textView5"
                android:id="@+id/textView6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female Veteran Suicide Prevention Act 2/3/2016"
                android:layout_marginTop="5dp"
                android:layout_below="@id/textView6"
                android:id="@+id/textView7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tule Lake National Historic Site Est. Act of 2015 12/17/2015"
                android:layout_marginTop="5dp"
                android:layout_below="@id/textView7"
                android:id="@+id/textView8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End of Suffering Act of 2015 10/22/2015"
                android:layout_marginTop="5dp"
                android:layout_below="@id/textView8"
                android:id="@+id/textView9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="see all since Aug 15, 2015"
                android:layout_marginTop="5dp"
                android:layout_below="@id/textView9"
                android:id="@+id/textView10" />


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
