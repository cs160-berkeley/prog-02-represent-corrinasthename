<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome,\nHow will you stay\nInformed today..."
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:id="@+id/welcome"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/zcEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Zip Code:"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/welcome"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/zipCode"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:maxLength="5"
        android:layout_below="@+id/welcome"
        android:layout_toEndOf="@+id/zcEntry" />

    <ImageButton
        android:id="@+id/zipCodeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="25dp"
        android:maxHeight="25dp"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_toEndOf="@+id/zipCode"
        android:layout_below="@+id/welcome"
        android:layout_marginTop="15dp"
        android:src="@drawable/greenarrow" />

    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="or"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_below="@+id/zipCode"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/currLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Use current location"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_below="@+id/or"
        android:layout_toEndOf="@+id/cLButton"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/cLButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="35dp"
        android:maxHeight="35dp"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_below="@+id/or"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/currentlocation" />

</RelativeLayout>
